layer {
  name: "loss"
  type: "GMMLoss"
  bottom: "alpha"
  bottom: "mean"
  bottom: "variance"
  bottom: "correlation_h"
  bottom: "label"
  gmm_param {
    num_mixtures: 40
    base: 0.5
  }
  include { phase: TRAIN }
}

layer {
  name: "loss"
  type: "GMMLoss"
  bottom: "alpha"
  bottom: "mean"
  bottom: "variance"
  bottom: "correlation_h"
  bottom: "label"
  top: "loss"
  gmm_param {
    num_mixtures: 40
    base: 0.5
  }
  include { phase: TEST }
}


